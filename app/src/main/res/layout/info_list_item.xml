<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:padding="10dp">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_dialog_info"
            android:id="@+id/infoListImage" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Something"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/infoListText"
            app:layout_constraintStart_toEndOf="@+id/infoListImage" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp" android:textAlignment="center" android:layout_marginStart="40dp"
            android:layout_marginEnd="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>